{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "typeRoots": [
            "./types",
            "./node_modules/@types",
            "./node_modules/phaser-ce/typescript/"
        ],
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "./custom.d.ts",
        "./src/**/*.tsx",
    ],
    "compileOnSave": false
}